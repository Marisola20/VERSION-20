        android:text="Pagar QR"
        android:textColor="#FFFFFF"
        android:textColorLink="#DDD5D5"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/btnRutas"
        android:layout_width="241dp"
        android:layout_height="81dp"
        android:backgroundTint="#363E68"
        android:onClick="irRutas"
        android:text="Rutas"
        android:textColor="#FFFFFF"
        android:textColorLink="#DDD5D5"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <Button
        android:id="@+id/btnSaliru"
        android:layout_width="156dp"
        android:layout_height="53dp"
        android:backgroundTint="#A34747"
        android:onClick="irCerrarSesion"
        android:text="Cerrar SesiÃ³n"
        android:textColor="#FFFFFF"
        android:textColorLink="#DDD5D5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />
